<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".ScientificCalculator">

    <TextView
        android:id="@+id/working"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000"
        android:text=""
        android:textColor="#f6f6f6"
        android:textSize="30sp"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:layout_weight="1">
    </TextView>

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#000"
        android:text=""
        android:textColor="#fff"
        android:textSize="50sp"
        android:textAlignment="viewEnd"
        android:padding="10dp"
        android:gravity="bottom"
        android:maxLines="1"
        android:layout_weight="2">
    </TextView>

    <!-- LINEAR LAYOUT ENCAPSULATING THE BUTTONS -->
    <LinearLayout
        android:layout_weight="7"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <!-- SECOND LINEAR LAYOUT FOR THE TEXT AREA -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="7">

            <!-- BUTTON ROW 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/reset"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/ac"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/delete"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/delete"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/openbracket"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/OpenBracket"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/closebracket"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/CloseBracket"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>
                </LinearLayout>
            </LinearLayout>

            <!-- BUTTON ROW 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <!-- weightSum = DETERMINES HOW MANY ELEMENTS THE LAYOUT CAN HOLD -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/sin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/sin"
                        android:textAllCaps="false"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/cosine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/cos"
                        android:textAllCaps="false"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/tangent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/tan"
                        android:textAllCaps="false"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/logarithm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/log"
                        android:textAllCaps="false"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/natural_logarithm"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/ln"
                        android:textAllCaps="false"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>
                </LinearLayout>
            </LinearLayout>

            <!-- BUTTON ROW 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="5">

                    <Button
                        android:id="@+id/factorial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/Factorial"
                        android:textAllCaps="false"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/square"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/squared"
                        android:textAllCaps="false"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/squareroot"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/squareroot"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/reciprocal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/reciprocal"
                        android:textAllCaps="false"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/division"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/division"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>
                </LinearLayout>
            </LinearLayout>

            <!-- BUTTON ROW 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/seven"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/seven"
                        android:textColor="@color/lightblue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/eight"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/eight"
                        android:textColor="@color/lightblue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/nine"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/_9"
                        android:textColor="@color/lightblue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/multiplication"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/multiplication"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>
                </LinearLayout>
            </LinearLayout>

            <!-- BUTTON ROW 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/four"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/_4"
                        android:textColor="@color/lightblue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/five"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/_5"
                        android:textColor="@color/lightblue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/six"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/_6"
                        android:textColor="@color/lightblue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/subtract"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/minus"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>
                </LinearLayout>
            </LinearLayout>

            <!-- BUTTON ROW 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/_1"
                        android:textColor="@color/lightblue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/_2"
                        android:textColor="@color/lightblue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/three"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/_3"
                        android:textColor="@color/lightblue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/addition"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/add"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>
                </LinearLayout>
            </LinearLayout>

            <!-- BUTTON ROW 5 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <Button
                        android:id="@+id/pi"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/pi"
                        android:textColor="@color/lightblue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/zero"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/_0"
                        android:textColor="@color/lightblue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/point"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/fullstop"
                        android:textColor="@color/lightblue"
                        android:textSize="30sp"></Button>

                    <Button
                        android:id="@+id/equal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/black"
                        android:text="@string/equals"
                        android:textColor="@color/blue"
                        android:textSize="30sp"></Button>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>